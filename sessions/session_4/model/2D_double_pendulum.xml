<!-- https://mujoco.readthedocs.io/en/latest/overview.html?highlight=hello.xml#examples -->
<mujoco>
  <option timestep="0.01" integrator="RK4" gravity="0 0 -9.81">
    <flag gravity="enable"/>
  </option>
  <visual>
      <rgba haze="0.5 0.5 0.5 1"/>
      <global offwidth="1920" offheight="1080" elevation="-20" azimuth="120"/>
  </visual>
  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.4 0.6 0.8" rgb2="0 0 0" width="32" height="512"/>
    <texture name="grid" type="2d" builtin="checker" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" width="512" height="512"/>
    <material name="grid" texture="grid" texrepeat="1 1" texuniform="true" reflectance="0.2"/>
  </asset>
   <worldbody>
    <geom name="floor" size="0 0 0.01" type="plane" material="grid" condim="1" solref="1 0.1"/>
    <light name="floorlight" mode="fixed" pos="0 0 50" dir="0 0 -1" diffuse="0.8 0.8 0.8" specular="0.3 0.3 0.3"/>
      <body pos="0 0 4" euler="0 180 0">
         <joint name="joint0" type="hinge" axis = "0 -1 0" pos = "0 0 0.5"/>
         <geom type="cylinder" size="0.05 0.5" rgba="1 1 0 1" mass="1"/>
         <body pos="0 -0.1 -1" euler="0 0 0">
           <joint name="joint1" type="hinge" axis = "0 -1 0" pos = "0 0 0.5"/>
           <geom type="cylinder" size="0.05 0.5" rgba="0 1 1 1" mass="1"/>
         </body>
      </body>
    </worldbody>
   <actuator>
     <motor name="torque0" joint="joint0"  gear="1" />
     <motor name="torque1" joint="joint1"  gear="1" />
   </actuator>
</mujoco>
